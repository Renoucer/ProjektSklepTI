@model IEnumerable<Film>
<h3>
    @Html.Raw("Search results for: ")
</h3>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Director</th>
            <th>Description</th>
            <th>Price</th>

        </tr>

    </thead>
    <tbody>
        @foreach (var film in Model)
        {
            <tr>
                <td>@film.Title</td>
                <td>@film.Director</td>
                <td>@film.Desc</td>
                <td>@film.Price</td>
                <td><a href="@Url.Action("Details", "Films", new {filmId=film.FilmId})">🍳</a></td>

            </tr>
        }
    </tbody>
</table>
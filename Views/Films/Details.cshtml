@model Film


<table>
    <tr>
        <td>
            <h2>@Model.Category.Name</h2>
        </td>
        <td>
        <h2>pod tym jest obrazek</h2>
        <img src="~/grafika/@Model.Poster" height="400px"/>
        </td>
        <td>
            @(await Component.InvokeAsync("SideMenu", new { categoryName = Model.Category.Name }))
            <ul>
                <li>Title: @Model.Title</li>
                <li>Director: @Model.Director</li>
                <li>Price: @Model.Price</li>
                <li>Description: @Model.Desc</li>

            </ul>
            <button onclick="window.location.href='@Url.Action("EditFilm", "Films",new{id=Model.FilmId})'">Edit</button>
        </td>
    </tr>
</table>
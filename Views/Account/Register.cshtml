@model RegisterViewModel
<div>
    @ViewBag.result
</div>
<div>
    @Html.ValidationSummary();
</div>
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
   <div>
        <div class="form-group">
           <b>@Html.LabelFor(m => m.Email, "Podaj email") </b>
           @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = true })

        
        </div>

        <div class="form-group">
            <b>@Html.LabelFor(m => m.UserName, "Podaj nazwe uzytkownika") </b>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @required = true })
        </div>

        <div class="form-group">
            <b>@Html.LabelFor(m => m.Password, "Podaj haslo") </b>
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @required = true })
        </div>

        <div class="form-group">
            <b>@Html.LabelFor(m => m.ConfirmPassword, "Powtorz haslo") </b>
            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @required = true })
        
     
        </div>

        <div class="form-group">
            <b>@Html.LabelFor(m => m.FirstName, "Podaj imie:") </b>
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @required = false })
        </div>

        <div class="form-group">
            <b>@Html.LabelFor(m => m.LastName, "Podaj nazwisko") </b>
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @required = false })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Rejestracja</button>
        </div>
   </div>

     

}